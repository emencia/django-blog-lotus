{
    "name": "lotus-sandbox-frontend",
    "version": "0.2.0",
    "description": "Lotus sandbox frontend assets building. This is just about to install Bootstrap and build CSS.",
    "author": "David THENON <sveetch@gmail.com>",
    "private": true,
    "scripts": {
        "css": "node-sass --include-path node_modules --output sandbox/static/css/ scss/",
        "watch-css": "nodemon --watch scss/ --ext scss --exec \"npm run-script css\"",
        "css-prod": "node-sass --output-style compressed --include-path node_modules --output sandbox/static/css/ scss/"
    },
    "dependencies": {
        "autoprefixer": "^10.3.0",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.7.0",
        "node-sass": "^6.0.1",
        "nodemon": "^2.0.12",
        "postcss": "^8.3.11",
        "postcss-cli": "^9.0.1"
    },
    "devDependencies": {},
    "engines": {
        "node": ">= 12.0.0",
        "npm": ">= 6.0.0"
    },
    "browserslist": [
        ">= 0.5%",
        "last 2 major versions",
        "not dead",
        "Chrome >= 60",
        "Firefox >= 60",
        "Firefox ESR",
        "iOS >= 12",
        "Safari >= 12",
        "not Explorer <= 11"
    ]
}
